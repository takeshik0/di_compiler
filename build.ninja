ninja_required_version = 1.3

cxxflags = -std=c++20 -Iinclude

rule compile
    command = clang++ $cxxflags -c $in -o $out

rule link
    command = clang++ $in -o $out

build Tokanizer.o: compile src/Tokanizer.cpp
build AsmCode.o: compile src/AsmCode.cpp
build main.o: compile src/main.cpp

build asm: link Tokanizer.o main.o AsmCode.o

default asm

